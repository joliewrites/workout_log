
<%= simple_form_for ([@workout, @workout.exercises.build]) do |f| %>
  <p> What did you do?</p>
  <%= f.input :name, label: false, input_html: { class: 'form-control' } %>
  <p> How many sets? </p>
  <%= f.input :sets, label: false, input_html: { class: 'form-control' } %>
  <p> How many reps? </p>
  <%= f.input :reps, label: false, input_html: { class: 'form-control' } %>
  <%= f.button :submit %>
  <br>
<% end %>
