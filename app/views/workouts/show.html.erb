<div class="container">

  <h1> My workout details </h1>
  <p class="h3-text"><%= @workout.date.strftime("%A %b %d") %></p>
  <p> <strong>Workout Type: </strong> <%= @workout.workout %> </p>
  <p> <strong>Mood: </strong><%= @workout.mood %> </p>
  <p> <strong>Duration: </strong><%= @workout.length %> </p>

  <h2>Exercises</h2>
  <%= render @workout.exercises, locals: {zone: @zone} %>
  <br>

  <%= render "exercises/form", locals: {zone: @zone} %>
  <div class="flex">
    <div class="mr-5"><%= link_to "🔙", root_path  %></div>
    <br>

    <div class="mr-5"><%= link_to "✏️", edit_workout_path(@workout) %></div>
    <br>

    <div class="mr-5"><%= link_to "🗑", workout_path(@workout), method: :delete, data: { confirm: "Are you sure you want to delete this workout?" }  %></div>
    <br>

  </div>
</div>

