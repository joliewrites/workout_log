<h1> My workout details </h1>
<p> <%= @workout.date %> </p>
<p> <%= @workout.workout %> </p>
<p> <%= @workout.mood %> </p>
<p> <%= @workout.length %> </p>

<h2>Exercises</h2>
<%= render @workout.exercises, locals: {zone: @zone} %>
<h4>Add an Exercise</h4>
<%= render "exercises/form", locals: {zone: @zone} %>

<%= link_to "Back", root_path %>
<br>
<%= link_to "Edit", edit_workout_path(@workout) %>
<br>
<%= link_to "Delete", workout_path(@workout), method: :delete, data: {:confirm => "Are you sure you want to delete this workout?" }%>
