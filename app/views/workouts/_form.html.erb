<div class="container w-container workout-form">
  <%= simple_form_for(@workout, html: { class: 'form-horizontal' }) do |f| %>
    <%= f.input :date, as: :date, hint: "Required field",label: false, input_html: { class: 'form-control-1' } %>
    <p class="p-workout">Type of workout</p>
    <%= f.input :workout, label: false, hint: "Required field", input_html: { class: 'form-control-1' } %>
    <%= f.input :mood, label: "How are you feeling?", :collection => %w[Fine☺️ Tired😰 Moody😤 Happy😊 Excited🎊 Lethargic😩 Annoyed🙄 Energetic⚡️ Strong🏋 Lazy😒 Sleepy😴], input_html: { class: 'form-control-1' } %>
    <%= f.input :length, label: "Workout duration", input_html: { class: 'form-control-1' } %>

    <%= f.button :submit, class: "my-button" %>
  <% end %>
</div>
